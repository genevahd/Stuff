<h1>Welcome!</h1>
<div class="col-md-6">
	<h3>Register</h3>
	<form action='/users' method='post'>
	    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
	    <div class="row form-group">
	    	<label  class="label-control col-md-3">Name</label>
		    <input class="col-md-4" type="text" name="name">
	    </div>
	    <div class="row form-group">
	    	<label  class="label-control col-md-3">Alias</label>
		    <input class="col-md-4" type="text" name="alias">
	    </div>
	    <div class="form-group row">
	    	<label class="label-control col-md-3">Email</label>
		    <input class="col-md-4" type="text" name="email">
	    </div>
	    <div class="row form-group">
	    	<label  class="label-control col-md-3">Password</label>
		    <input class="col-md-4" type="password" name="password">
	    </div>
	    <div class="row form-group">
	    	<p class="col-md-8">Password should be at least 8 characters</p>
	    </div>
	    <div class="row form-group">
	    	<label  class="label-control col-md-3">Confirm PW</label>
		    <input class="col-md-4" type="password" name="password_confirmation">
	    </div>
	    <div class="row form-group">
	    	<button class="btn btn-success col-md-4 col-md-offset-3" type='submit'>Join</button>
	    </div>
	    <div class="row form-group">
	    	<% if flash[:errors]%>
		 	<% flash[:errors].each do |e| %>
			<p style="color: red"><%= e %></p>
			<%	end
			end %>
	    </div>
	 </form>
</div>
<div class="col-md-6">
	<h3>Login</h3>
	<form action="/sessions" method="post" role="form">
		<input type ="hidden" name="authenticity_token" method="post" value="<%= form_authenticity_token %>">
		<div class="form-group row">
	    	<label class="label-control col-md-3">Email</label>
		    <input class="col-md-4" type="text" name="email">
	    </div>
		<div class="row form-group">
	    	<label  class="label-control col-md-3">Password</label>
		    <input class="col-md-4" type="password" name="password">
	    </div>
		<div class="row form-group">
	    	<button class="btn btn-success col-md-4 col-md-offset-3" type='submit'>Log in</button>
	    </div>
	    <div class="row form-group">
		    <% if flash[:error]%>
			<p style="color: red"><%= flash[:error] %></p>
			<%	end %>
		</div>
	</form>
</div>